<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VK.Transparent" parent="android:Theme.Holo.Light">
        <itemList name="android:windowIsTranslucent">true</itemList>
        <itemList name="android:windowBackground">@android:color/transparent</itemList>
        <itemList name="android:windowContentOverlay">@null</itemList>
        <itemList name="android:windowNoTitle">true</itemList>
        <itemList name="android:windowIsFloating">true</itemList>
    </style>

    <style name="VKAlertDialog">
        <itemList name="android:windowBackground">@android:color/transparent</itemList>
        <itemList name="android:windowContentOverlay">@null</itemList>
        <itemList name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</itemList>
        <itemList name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</itemList>
    </style>
</resources>